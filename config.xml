<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "kz.menzo.app"
        versionCode = "10"
        version     = "1.1.0">

    <name>Tadapp.DEMO</name>

    <description>
        При заказе от 3000 тенге доставка роллов и пиццы , осуществляется совершенно бесплатно. Вы заплатите только за заказанные блюда, Вам не придется переплачивать за доставку продукта.
    </description>

    <author>Tadapp</author>

    <plugin name='cordova-plugin-splashscreen' />
    <plugin name='cordova-plugin-inappbrowser' />
    <plugin name='cordova-plugin-network-information' />

    <preference name='phonegap-version' value='cli-9.0.0' />

    <gap:plugin name='onesignal-cordova-plugin' spec='2.4.5' source='npm' />

    <preference name='android-build-tool' value='gradle' />
    <preference name="android-targetSdkVersion" value="28" />
    <preference name='orientation' value='portrait' />

    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashScreenSpinnerColor" value="#ff3366" />

    <preference name="Fullscreen" value="false" />


    <platform name="android">
        <icon src="res/android/icon/ldpi_1591258612_bd9b1542ebec633ba8ef.png" density="ldpi" />
        <icon src="res/android/icon/mdpi_1591258612_bd9b1542ebec633ba8ef.png" density="mdpi" />
        <icon src="res/android/icon/hdpi_1591258612_bd9b1542ebec633ba8ef.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi_1591258612_bd9b1542ebec633ba8ef.png" density="xhdpi" />
        <icon src="res/android/icon/xxhdpi_1591258612_bd9b1542ebec633ba8ef.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi_1591258612_bd9b1542ebec633ba8ef.png" density="xxxhdpi" />

        <splash src="res/android/screen/hdpi_port_1591258518_f36395189a426c3b46c7.png" density="port-hdpi"/>
        <splash src="res/android/screen/ldpi_port_1591258518_f36395189a426c3b46c7.png" density="port-ldpi"/>
        <splash src="res/android/screen/mdpi_port_1591258518_f36395189a426c3b46c7.png" density="port-mdpi"/>
        <splash src="res/android/screen/xhdpi_port_1591258518_f36395189a426c3b46c7.png" density="port-xhdpi"/>
        <splash src="res/android/screen/hdpi_land_1591258518_f36395189a426c3b46c7.png" density="land-hdpi"/>
        <splash src="res/android/screen/ldpi_land_1591258518_f36395189a426c3b46c7.png" density="land-ldpi"/>
        <splash src="res/android/screen/mdpi_land_1591258518_f36395189a426c3b46c7.png" density="land-mdpi"/>
        <splash src="res/android/screen/xhdpi_land_1591258518_f36395189a426c3b46c7.png" density="land-xhdpi"/>
    </platform>

    <access origin='*'/>
    <plugin name='cordova-plugin-whitelist' />
    <allow-intent href='http://*/*'/>
    <allow-intent href='https://*/*'/>
    <allow-intent href='tel:*'/>
    <allow-intent href='sms:*'/>
    <allow-intent href='mailto:*'/>
    <allow-intent href='geo:*'/>

</widget>